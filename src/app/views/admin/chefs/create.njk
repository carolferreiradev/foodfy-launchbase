{% extends '../layout.njk' %}
{% block conteudo %}
  <div class="container">

  <form action="/admin/chefs" method="POST" enctype="multipart/form-data">

    <div class="titles-header">
       <h3>Criando chef</h3>
      <div class="buttons"> 
        <button class="save" type="submit">Salvar chef</button>
      </div>
    </div>

    <div class="create-chef">
      
      <div class="item-form">
        <h5>Nome</h5>
        <input 
          type="text" 
          name="name"
        />
      </div>

      <div class="item-form">
        <h5>Avatar</h5>

        <div class="photos-master">

          <div class="images-upload">
            <input
              id="photos-input"
              type="file"
              name="photos"
              multiple
              accept="image/*"
              onchange="PhotosUpload.handleFileInput(event)"
            />
            <p class="chefsImage">Enviar Avatar</p>

          <div class="chefsImagePreview"></div>
          </div>


        </div>
      </div>
    </div>
  </form>
{% endblock conteudo %}
{% block scripts %}
  <script src="/uploadImages.js"></script>
{% endblock scripts %}