{% extends '../layout.njk' %}
{% block conteudo %}
  <div class="container">

    <div class="titles-header">
      {% if user.is_admin == true %}
        <h3>Gerenciar chefs</h3>
      {% else %}
        <h3>Lista de chefs</h3>
      {% endif %}
      <div class="buttons">
        <a class="new-receita" href="/admin/chefs/create">Novo Chef</a>
      </div>
    </div>


    <div class="chefs-list">
      {% for chef in allChefs %}
        <div class="items-chef">

          <div class="image-chef">
            <img src="{{ chef.path }}" alt="Foto de {{ chef.name }}">
          </div>

          <div class="content-chef">
            <p>{{ chef.name }}</p>
            <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
          </div>

        </div>
      {% endfor %}
    </div>

  </div>
{% endblock conteudo %}