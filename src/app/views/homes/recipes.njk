{% extends "./layout.njk" %}
{% block conteudo %}
  <div class="container">
    <div class="content">
      <div class="cards">
        {% for receita in recipes %}
          <div class="conteudo-receita" id="{{ receita.id }}">
            <div class="id-da-receita">
              <div class="card-image">
                <img src="{{ receita.path }}" alt="foto de {{ receita.title }}"></div>
                <div class="card-data">
                  <p class="names">{{ receita.title }}</p>
                  <p class="autor">por {{ receita.chef_name }}</p>
                </div>
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
      </div>
    {% endblock %}